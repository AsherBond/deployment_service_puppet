upstream unicorn_<%= app_name %> {
  server unix:/data/<%= app_name %>/shared/sockets/unicorn.sock fail_timeout=0;
}
server {
  listen 443;

  ssl on;
  ssl_certificate         /etc/ssl/<%= app_name %>.crt;
  ssl_certificate_key     /etc/ssl/<%= app_name %>.key;
  ssl_protocols SSLv3 TLSv1;
  ssl_ciphers ALL:!ADH:RC4+RSA:+HIGH:+MEDIUM:!LOW:!SSLv2:!EXPORT;

  root /data/<%= app_name %>/current/public;

  location / {
    proxy_set_header X_FORWARDED_PROTO https;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header  X-Url-Scheme $scheme;
    proxy_max_temp_file_size 0;
    proxy_redirect off;

    if (!-f $request_filename) {
      proxy_pass http://unicorn_<%= app_name %>;
      break;
    }
  }

  location ~* ^/assets {
    expires max;
    add_header Cache-Control public;
    break;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /data/<%= app_name %>/current/public;
  }
}
